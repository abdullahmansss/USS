<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroung"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/adduser"
        app:civ_border_color="@color/back"
        app:civ_border_width="3dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        >

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="15dp"
            android:fadingEdgeLength="0dp"
            android:layout_marginRight="10dp"
            >

            <LinearLayout
                android:id="@+id/timeline_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/timeline"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="timeline"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="15dp"
            android:fadingEdgeLength="0dp"
            android:layout_marginRight="10dp"
            >

            <LinearLayout
                android:id="@+id/aaab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/sheets"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="sheets"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="15dp"
            android:fadingEdgeLength="0dp"
            >

            <LinearLayout
                android:id="@+id/aaaab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/material"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="materials"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        >

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="15dp"
            android:fadingEdgeLength="0dp"
            android:layout_marginRight="10dp"
            >

            <LinearLayout
                android:id="@+id/aa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/schedule"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="schedules"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="15dp"
            android:fadingEdgeLength="0dp"
            android:layout_marginRight="10dp"
            >

            <LinearLayout
                android:id="@+id/dep_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/university4"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="departments"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="15dp"
            android:fadingEdgeLength="0dp"
            >

            <LinearLayout
                android:id="@+id/aaaa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/section"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="sections"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="15dp"
            android:fadingEdgeLength="0dp"
            android:layout_marginRight="10dp"
            >

            <LinearLayout
                android:id="@+id/sign_in_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/slideshow"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="Gallery"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="15dp"
            android:fadingEdgeLength="0dp"
            android:layout_marginRight="10dp"
            >

            <LinearLayout
                android:id="@+id/my_profile_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/profile"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="my profile"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="15dp"
            android:fadingEdgeLength="0dp"
            >

            <LinearLayout
                android:id="@+id/contact_us_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/contact"
                    android:padding="10dp"
                    android:background="@drawable/circle_background"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="contact us"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>